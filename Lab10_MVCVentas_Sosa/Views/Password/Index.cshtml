@model Modelo.USUARIO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div id="usuario" class="pager">
    <h1 class="page-header">Cambiar Password</h1>

    @using (Html.BeginForm("Guardar", "Password", FormMethod.Post))
    {
        <div>
            <ul class="nav nav-tabs" role="tablist">
                <li role="password" class="">
                    <a href="#pass" aria-controls="info" role="tab" data-toggle="tab">Actualizar Password</a>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="info">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.IDUSUARIO)

                        @Html.LabelFor(x => x.NOMBREUSU)
                        @Html.TextBoxFor(x => x.NOMBREUSU, new { @class = "form-control", placeholder = "Ingrese su nombre" })
                        @Html.ValidationMessageFor(x => x.NOMBREUSU, null, new { @class = "label label-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.EMAIL)
                        @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", placeholder = "Ingrese sus apellidos" })
                        @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "label label-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.PASSWORD)
                        @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control", placeholder = "Ingrese sus apellidos" })
                        @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "label label-danger" })
                    </div>
                </div>
            </div>

            <div class="text-right well well well-sm">
                <button data-ajax="true" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    }

</div>