@model Modelo.USUARIO
@{
    ViewBag.Title = (Model.IDUSUARIO == "" ? Model.NOMBRE : "Nuevo Registro");
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">Agregar/Editar Usuario</h2>

<ol class="breadcrumb">
    <li>
        <a href="~/Usuario/">Usuarios</a>
    </li>
    <li class="active">
        @(Model.IDUSUARIO == "" ? Model.NOMBRE : "Nuevo Registro")
    </li>
</ol>

@using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.IDUSUARIO)

    <div class="panel panel-default">
        <div class="panel-heading">
            Información de los Usuarios
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(x => x.IDUSUARIO)
                @Html.TextBoxFor(x => x.IDUSUARIO, new { @class = "form-control", disabled = true })
                @Html.ValidationMessageFor(x => x.IDUSUARIO, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.IDTIPOUSUARIO)
                @Html.TextBoxFor(x => x.IDTIPOUSUARIO, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.IDTIPOUSUARIO, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.PASSWORD)
                @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.NOMBRE)
                @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.APELLIDOS)
                @Html.TextAreaFor(x => x.APELLIDOS, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.APELLIDOS, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.EMAIL)
                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.ESTADO)
                <select name="estado" class="form-control">
                    <option @(Model.ESTADO == "A" ? "selected" : "") value="A">Activo</option>
                    <option @(Model.ESTADO == "I" ? "selected" : "") value="I">Inactivo</option>
                </select>
                @Html.ValidationMessageFor(x => x.ESTADO, null, new { @class = "label label-danger" })
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span></button>
        <a href="~/Usuario/Index" class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-floppy-remove" aria-hidden="true"></span></a>
    </div>
}