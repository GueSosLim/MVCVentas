@model List<Modelo.DETALLE_PEDIDO>
@{
    ViewBag.Title = "ListarDetallePedido";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">
    <a href="~/DetallePedido/AgregarEditar/" class="btn btn-lg btn-success pull-right"><span class="glyphicon glyphicon-file" aria-hidden="true"></span></a>Detalles de Pedidos
</h2>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width:50px;">Id</th>
                <th style="width:200px;">Producto</th>
                <th style="width:200px;">Precio</th>
                <th style="width:50px;">Cantidad</th>
                <th style="width:50px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <th>@(m.IDPEDIDO)</th>
                    <th>@(m.IDPRODUCTO)</th>
                    <th>@(m.PRECIO)</th>
                    <th>@(m.CANTIDAD)</th>

                    <th>
                        <a href="~/DetallePedido/Ver/@m.IDPEDIDO" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        <a href="~/DetallePedido/AgregarEditar/@m.IDPEDIDO" class="btn btn-lg btn-info"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a onclick="return confirm('¿Está seguro de eliminar el registro...?');" class="btn btn-lg btn-danger" href="~/DetallePedido/Eliminar/@m.IDPEDIDO"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>