@model Modelo.DETALLE_PEDIDO
@{
    ViewBag.Title = (Model.IDPEDIDO > 0 ? Model.PRECIO : "Nuevo Registro");
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">Agregar/Editar DetallePedido</h2>

<ol class="breadcrumb">
    <li>
        <a href="~/">Categorías</a>
    </li>
    <li class="active">
        @(Model.IDPEDIDO > 0 ? Model.NOMBRE : "Nuevo Registro")
    </li>
</ol>

@using (Html.BeginForm("GuardarDetallePedido", "Home", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.IDPEDIDO)

    <div class="panel panel-default">
        <div class="panel-heading">
            Información de la Categoría
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(x => x.IDPEDIDO)
                @Html.TextBoxFor(x => x.IDPEDIDO, new { @class = "form-control", disabled = true })
                @Html.ValidationMessageFor(x => x.IDPEDIDO, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.IDPRODUCTO)
                @Html.TextBoxFor(x => x.IDPRODUCTO, new { @class = "form-control", disabled = true })
                @Html.ValidationMessageFor(x => x.IDPRODUCTO, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.PRECIO)
                @Html.TextBoxFor(x => x.PRECIO, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PRECIO, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.CANTIDAD)
                @Html.TextAreaFor(x => x.CANTIDAD, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CANTIDAD, null, new { @class = "label label-danger" })
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="~/DetallePedido/Index" class="btn btn-danger">Cancelar</a>
    </div>
}