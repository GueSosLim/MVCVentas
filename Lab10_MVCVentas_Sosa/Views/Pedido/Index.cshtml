@model List<Modelo.PEDIDO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">
    <a href="~/Pedido/AgregarEditar/" class="btn btn-lg btn-success pull-right"><span class="glyphicon glyphicon-file" aria-hidden="true"></span></a>Pedidos
</h2>

@using (Html.BeginForm("Buscar", "Pedido", FormMethod.Post, new { criterio = "frm-buscar" }))
{
    <div class="text-left">
        @Html.Label("Buscar: ")
        @Html.TextBox("criterio", null)
        <button type="submit" class="btn btn-lg btn-warning pull-right"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
    </div>
}
<br />
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width:50px;">Id</th>
                <th style="width:200px;">Fecha</th>
                <th style="width:200px;">Estado</th>
                <th style="width:50px;">Usuario</th>
                <th style="width:50px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <th>@(m.IDPEDIDO)</th>
                    <th>@(m.FECHA)</th>
                    <th>@(m.ESTADO)</th>
                    <th>@(m.USUARIO.NOMBREUSU)</th>

                    <th>
                        <a href="~/Pedido/Ver/@m.IDPEDIDO" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        <a href="~/Pedido/AgregarEditar/@m.IDPEDIDO" class="btn btn-lg btn-info"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a onclick="return confirm('¿Está seguro de eliminar el registro...?');" class="btn btn-lg btn-danger" href="~/Pedido/Eliminar/@m.IDPEDIDO"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>